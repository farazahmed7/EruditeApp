              android:layout_height="wrap_content"
              xmlns:card_view="http://schemas.android.com/tools"
    >


    <LinearLayout

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
       >
